<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="exampleModalLabel">添加环网柜</h4>
        </div>
        <div class="modal-body">
            <form id="form_edit" action="station/Edit" method="post">
                @if (ViewBag.userDept == null)
                {
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">单位</span>
                            <input type="hidden" data-select="dw" class="form-control _select" name="DeptID" />
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">名称</span>
                        <input type="text" class="form-control" name="Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">编号</span>
                        <input type="text" class="form-control" name="Code" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">省</span>
                        <input type="hidden" data-select="p" class="form-control _select" name="Province" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">市</span>
                        <input type="hidden" data-select="ci" class="form-control _select" name="City" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">县</span>
                        <input type="hidden" data-select="co" class="form-control _select" name="Country" />
                        <input type="hidden" name="CityCode" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">地址</span>
                        <input type="text" class="form-control" name="Address" />
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary save">保存</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("._select").select_2();
    });
</script>