
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div style="display: block">
    <img src="~/images/logo.png" style="height: 86px;" />
</div>
<h1 style="letter-spacing:0.2em;">环网柜智能云在线监测</h1>
<form class="form" id="form_login" action="@Url.Action("signin","Login")" method="post">
    <input type="text" name="account" placeholder="用户名">
    <input type="password" name="pwd" placeholder="密码">
    <button type="submit" id="login-button">登录</button>
</form>

<script type="text/javascript" src="~/js/buddle.jquery.min.js"></script>
<script type="text/javascript" src="~/js/Page/login.js"></script>